<% if @disaster.errors.any? %>
      <ul>
      <% @disaster.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

  <div class="form-group">
    <%= f.label :name, "Disaster" %>
